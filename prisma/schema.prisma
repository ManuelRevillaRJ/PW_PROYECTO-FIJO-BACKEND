generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  correo String @unique
  password String
  nombre String
  token String
  estado Boolean
  permiso Permiso @default(user)
  compras Venta[]
  calificaciones Calificacion[]
}

enum Permiso {
  user
  admin
}

model Venta {
  id Int @id @default(autoincrement())
  fecha DateTime @default(now())
  usuario Usuario @relation(fields: [usuario_id], references: [id])
  usuario_id Int
  juego Juego @relation(fields: [juego_id], references: [id])
  juego_id Int
  codigo String
  monto_pagado Float
}

model Juego {
  id Int @id @default(autoincrement())
  titulo String
  descripcion String
  precio Float
  oferta Boolean
  rating Float
  estado Boolean
  categoria Categoria @relation(fields: [categoria_id], references: [id])
  categoria_id Int
  plataformas JuegoPlataforma[]
  ventas Venta[]
  calificaciones Calificacion[]
  cover String
  imagenes String[]
  videoURL String?
}

model Calificacion {
  id Int @id @default(autoincrement())
  valoracion Float
  comentario String
  juego Juego @relation(fields: [juego_id], references: [id])
  juego_id Int
  usuario Usuario @relation(fields: [usuario_id], references: [id])
  usuario_id Int
}

model Categoria {
  id Int @id @default(autoincrement())
  nombre String
  juegos Juego[]
}

model Plataforma {
  id Int @id @default(autoincrement())
  nombre String
  juegos JuegoPlataforma[]
}

model JuegoPlataforma {
  juego Juego @relation(fields: [juegoId], references: [id])
  juegoId Int
  plataforma Plataforma @relation(fields: [plataformaId], references: [id])
  plataformaId Int

  @@id([juegoId, plataformaId])
}

model Noticia {
  id Int @id @default(autoincrement())
  titulo String
  texto String
  activo Boolean
}

